.page-service
	.sect__portfolio
		padding-top 80px
		
.project
	&-description
		&__text
			flex 1
			
		.project-params__wrapper
			margin-right 80px 
			
		.content
			font-size 16px
			ul
				li
					padding-left 0
					line-height 1.25
					margin-bottom 20px
					&:last-child
						margin-bottom 0
					&:before
						display none
						
	&-params
		margin-bottom 20px	
	&-param
		font-size 16px
		margin-bottom 20px
		sup
			font-size 20px
			vertical-align middle
		span
			display block
			font-size 40px
			margin-bottom 8px
			line-height 1
			white-space nowrap
			
.another-projects
	padding-top 80px
	border-top 1px solid $border-color
	.sect-title
		margin-bottom 20px
	.link-arrow
		margin-bottom 40px
		