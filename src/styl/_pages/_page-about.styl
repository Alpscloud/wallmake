.sect__slogan
	padding 160px 0
	
	.content
		text-align center
		max-width 570px
		margin 0 auto
		h2,h3
			font 40px $Med
			line-height 50px
			margin-bottom 20px
			
.sect__advantages
	padding 120px 0
	
.advantage
	overflow hidden
	position relative
	color $basic-white-color
	padding 40px 20px
	display flex !important
	flex-direction column
	justify-content flex-end
	height 500px
	transition height .23s ease-in-out

	&-title
		text-transform uppercase
		font-size 24px
		line-height 30px
		margin-bottom 10px
	p
		@extends .l-spacing
		display none
		line-height 22px
	&:before,
	&:after
		pseudo()
		position absolute
		fullSize()
	&:before
		background-color rgba($overlay-bg, .5)
		z-index 1
	&:after
		z-index 2
		
		background linear-gradient(25.94deg, #1A1818 4.21%, rgba(48, 39, 34, 0) 49.67%)
		
	&-content
		position relative
		z-index 3
		
// Team
.sect__team
	max-width 1920px
	margin 0 auto
.team-member
	width 50%
	background-color $basic-white-color
	color $dark-text-color
	.document
		width 100%
		margin-top 100px
		&-name
			text-overflow ellipsis
			//max-width 150px
			overflow hidden
	&:first-child
		width 100%
		background-color $color-bg
		
		.team-member__information
			max-width 360px
			
	&:nth-child(4n+5),
	&:nth-child(4n+4)
		flex-direction row-reverse
			
	&__photo
		width 50%
		
	&__content
		padding 30px
		flex-col-center()
		
	&__name
		font-size 24px
		color $dark-text-color
		line-height 30px
		margin-bottom 10px
	
	&__experience
		color #7A7A7A
		margin-top 18px
		
	&__information
		width 100%
		
	&__blockquote
		width 100%
		max-width 360px
		margin-top 35px
		position relative
		padding-top 22px
		&:before
			content 'â€œ'
			position absolute
			top 0
			left 0
			letter-spacing 0.02em
			font-size 30px


.document
	display flex
	flex-wrap nowrap
	align-items center
	justify-content flex-start
	&-name
		display inline-block
		line-height 35px
		position relative
		padding-left 40px
		color #7a7a7a
		margin-right 18px
		white-space nowrap
		height 35px
		
		&:before
			pseudo()
			position absolute
			vertical-center()
			left 0
			width 35px
			height 35px
			background url('../img/icons/svg/file.svg') 50% no-repeat / contain
	
	.link
		flex none