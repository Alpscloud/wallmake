.sect__vacancies
	padding 40px 0 120px
	
	.sect-title
		margin-bottom 20px
		
		
	.link-arrow
		margin-bottom 40px
		


.vacancy
	font-size 18px
	h2
		font-size 30px
	&-heading
		margin-bottom 40px
	&-title
		font 30px $Med
		line-height 41px
		margin-bottom 20px
		color $dark-text-color
	&-card
		margin-bottom 20px
		&:last-child
			margin-bottom 0
		&__link
			display flex
			flex-wrap nowrap
			align-items center
			justify-content space-between
			background-color $color-bg
			padding 13px 24px
			font 24px $Med
			color $dark-text-color
			
			line-height 1
			
			&-text
				display flex
				align-items center
				justify-content space-between
				font-size 12px
				line-height 1
				text-transform uppercase
				margin-left 24px
				span
					margin-right 30px
				svg
					svg()
					width 8px
					height 13px
					stroke #121212 
					stroke-linecap round 
					flex none
					stroke-linejoin round
					fill none
			span
				color inherit
				
			&:hover
				background-color $dark-text-color
				color $basic-white-color
				svg
					stroke $basic-white-color
		

.sect__vacancy-benefits
	background-color $brown-bg
	.content
		color $basic-white-color
		
	.btn
		margin-top 40px