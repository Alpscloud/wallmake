.sect__catalog
	padding-bottom 60px
	
.catalog-filter
	margin-bottom 38px
	margin-left -16px
	margin-right -16px
	&__category
		display block
		padding-left 16px
		padding-right 16px
		margin-bottom 8px
		text-align left
		color $dark-text-color
		a
			display block
			position relative
			padding-left 20px
			font 15px $Reg
			color $dark-text-color
			line-height 1
			cursor pointer
			&:before,
			&:after
				pseudo()
				position absolute
				background-color currentColor
				transition opacity .17s ease-in-out
			&:before
				width 12px
				height 2px
				left 0
				top 7px
			&:after
				height 12px
				width 2px
				left 5px
				top 2px
		
		&.is-active
			a:after
				opacity 0
	

.projects
	&-cards
		margin-left -30px
		margin-right -30px
		margin-bottom -60px

.project
	&-card
		padding-top 143%
		color $basic-white-color
		display block
		&:before
			pseudo()
			position absolute
			fullSize()
			background-color rgba($overlay-bg, .3)
			z-index 1
			transition background-color .17s ease-in-out
		&:hover
			&:before
				background-color rgba($overlay-bg, .6) !important
			img
				transform translate(-50%, -50%) scale(1.1, 1.1)
		&__wrapper
			padding-left 30px
			padding-right 30px
			margin-bottom 60px	
	
		&__title
			position absolute
			bottom 30px
			left 20px
			right 20px
			text-transform uppercase
			font 24px $Med
			line-height 33px
			color $basic-white-color
			z-index 2

.tags
	display inline-flex
	flex-wrap wrap
	justify-content flex-start
	position absolute
	top 30px
	left 20px
	right 20px
			
.tag
	display inline-block
	z-index 2
	text-align center
	color rgba($basic-white-color, .9)
	padding 4px 8px
	line-height 1
	background-color rgba(255, 255, 255, 0.3)
	border-radius 2px
	text-transform uppercase
	margin 0 8px 8px 0
	font-family $Med !important
		

.catalog
	.project
		&-card
			padding-top 100%
			&:hover
				.tags
					opacity 0
				.project-card__information
					opacity 1
					transform translateY(0)
					.tags
						opacity 1
			&:before
				background-color rgba($overlay-bg, .2)
				
			&__information
				padding 20px
				transition all .17s ease-in-out
				transform translateY(101%)
				background-color rgba(#F7F4F2, .9)
				position absolute
				left 0
				right 0
				bottom 0
				z-index 3
				.tags
					position relative
					top auto
					left auto
					right auto
					bottom auto
				
			&__title
				color $dark-text-color
				font 16px $Med
				text-transform none
				@extends .l-spacing
				bottom auto
				position relative
				left auto
				right auto
			
				
			> .tags
				top auto
				bottom 20px
				left 20px
				right 20px
			
				
			.tag
				font-size 12px
				background-color $dark-text-color
			
