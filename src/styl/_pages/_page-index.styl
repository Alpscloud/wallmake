// Chapters
.chapter-card
	flex 1 0 33.33333%
	width 100%
	display flex
	flex-direction column
	transition all .17s ease-in-out
	background-color $color-bg
	padding 80px 65px
	color $dark-text-color
	border-right 1px solid $border-color
	&:nth-child(3n+3)
		border-right none
	&:hover,
	&.is-active
		background-color $card-bg
		color $basic-white-color
		img
			filter brightness(0) saturate(100%) invert(100%) sepia(100%) saturate(0%) hue-rotate(288deg) brightness(102%) contrast(102%)
				
	&__category
		text-transform uppercase
		font 12px $Med
		line-height 16px
		margin-bottom 10px
		
	&__title
		font 30px $Med
		line-height 41px
		margin-bottom 20px
		
	&__text
		letter-spacing 2%
		
	&__information
		flex 1
		margin-bottom 50px
		
	&__price
		font 24px $Med
		margin-bottom 20px
		
	&__img
		height 350px
		flex-col-center()
		margin-bottom 20px
		img
			@extends .content-img
			transition filter .17s ease-in-out
			
	&__footer
		.btn:hover
			color $basic-white-color
			
// Story

.story
	
	&-content
		max-width 380px
		width 100%
		flex 1
		&__text
			margin-bottom 40px
			h2, h3
				color $dark-text-color
				font 30px $Med
				margin-bottom 40px
			i, em
				font-family $LItalic
				
			p
				margin-bottom 10px
				&:last-child
					margin-bottom 0
					
	&-links
		.link
			margin-left 40px


	
// Video
.video
	width 100%
	display block
	position relative
	padding-top 45.5%
	overflow hidden
	&-ic
		display inline-block
		width 60px
		height 60px
		svg
			svg()
			fill $basic-white-color
			fill-rule evenodd
			clip-rule evenodd
	&:before
		pseudo()
		position absolute
		fullSize()
		transition background-color .17s ease-in-out
		background-color rgba($overlay-bg, .2)
		z-index 1
		
	&:hover
		&:before
			background-color rgba($overlay-bg, .6)
		
	.container
		position absolute
		position-center()
		z-index 2
		display flex
		flex-direction column
		align-items center
		
// Calculator
.calculator
	&-content
		flex 1
		width 100%
		max-width 490px