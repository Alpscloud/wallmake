// Chapters
.chapter-card
	flex 1 0 33.33333%
	width 100%
	display flex
	flex-direction column
	transition all .17s ease-in-out
	background-color $color-bg
	padding 80px 65px
	color $dark-text-color
	border-right 1px solid $border-color
	&:nth-child(3n+3)
		border-right none
	&:hover,
	&.is-active
		background-color $card-bg
		color $basic-white-color
		img
			filter brightness(0) saturate(100%) invert(100%) sepia(100%) saturate(0%) hue-rotate(288deg) brightness(102%) contrast(102%)
				
		.chapter-card__img-double
			img
				&:nth-child(1)
					opacity 0
				&:nth-child(2)
					opacity 1
				
	&__category
		text-transform uppercase
		font 12px $Med
		line-height 16px
		margin-bottom 10px
		
	&__title
		font 30px $Med
		line-height 41px
		margin-bottom 20px
		
	&__text
		letter-spacing 2%
		
	&__information
		flex 1
		margin-bottom 50px
		
	&__price
		font 24px $Med
		margin-bottom 20px
		
	&__img
		height 350px
		flex-col-center()
		margin-bottom 20px
		position relative
		img
			@extends .content-img
			transition filter .17s ease-in-out
			transition opacity .17s ease-in-out
			&:nth-child(2)
				position absolute
				position-center()
				opacity 0
				filter none !important
					
	&__footer
		.btn:hover
			color $basic-white-color
			
// Story

.story
	
	&-content
		width 380px
		flex none
		&__text
			margin-bottom 40px
			h2, h3
				color $dark-text-color
				font 30px $Med
				margin-bottom 40px
			i, em
				font-family $LItalic
				
			p
				margin-bottom 10px
				&:last-child
					margin-bottom 0
					


	
// Video
.video
	width 100%
	display block
	position relative
	padding-top 45.5%
	overflow hidden
	&-ic
		display inline-block
		width 60px
		height 60px
		svg
			svg()
			fill $basic-white-color
			fill-rule evenodd
			clip-rule evenodd
	&:before
		pseudo()
		position absolute
		fullSize()
		transition background-color .17s ease-in-out
		background-color rgba($overlay-bg, .2)
		z-index 1
		
	&:hover
		&:before
			background-color rgba($overlay-bg, .6)
		
	.container
		position absolute
		position-center()
		z-index 2
		display flex
		flex-direction column
		align-items center
		
// Calculator
.calculator
	&-content
		flex 1
		width 100%
		max-width 490px
		
	.links
		margin-top 40px
		
	&-total
		letter-spacing 0.02em
		font-size 14px
		line-height 1
	
		span
			white-space nowrap
			line-height 1
			color $dark-text-color
			font 24px $Med
			margin-left 4px
			
	&-range
		margin-bottom 35px
		max-width 380px
		
		&__value
			margin-bottom 30px
			display flex
			flex-wrap nowrap
			justify-content space-between
			align-items center
			&-label
				font-size 14px
			&-val
				font 24px $Med
				color $dark-text-color
				display inline-block
				position relative
				
				.sup
					font-size 16px
					color $text-color
					vertical-align middle
					
		
		&__input
			height 4px
			border-radius 50px
			background-color rgba($border-color, .5)
			box-shadow none
			border none !important
			
			.ui-slider-range
				background-color $dark-text-color
				
			.ui-slider-handle
				border-radius 50%
				width 30px
				height 30px
				background-color $basic-white-color
				border 1px solid $border-color
				box-shadow 0px 0px 6px rgba(78, 60, 16, 0.25)
				vertical-center()
				margin-left -15px
				&.ui-state-focus
					border 1px solid $border-color
					color $border-color
		
	&-radios
		display flex
		flex-wrap nowrap
		margin-bottom 40px
		
	&-radio
		display block
		input
			display none
			&:checked
				+ span
					color $dark-text-color
					&:before
						transform translateX(0)
			
		span
			letter-spacing 0.02em
			display block
			padding-bottom 16px
			border-bottom 1px solid $border-color
			padding-right 15px
			position relative
			overflow hidden
			&:hover
				cursor pointer
			&:before
				pseudo()
				position absolute
				z-index 1
				width 100%
				left 0
				height 3px
				background-color currentColor
				bottom 0
				transition transform .17s ease-in-out
				transform translateX(-101%)
			
		&:last-child
			span
				padding-right 0
		
	&-notice
		margin-bottom 40px
		background-color $color-bg
		padding 12px
		font 12px $Med
		color $dark-text-color
		max-width 380px
		
// Work steps
.work-steps
	margin-left -1px
	margin-right -1px
	margin-bottom -2px
	
.work-step
	background-color $color-bg
	height 100%
	padding 40px 20px
	font 12px $Med
	line-height 16px
	&__title
		font 12px $Med
		color $dark-text-color
		text-transform uppercase
		display flex
		margin-bottom 10px
		align-items flex-start
		min-height 34px
		i
			font-size 15px
			display inline-block
			margin-top -3px
			margin-right 4px
	&__img
		height 185px
		flex-col-center()
		margin-bottom 40px
		img
			@extends .content-img
			
	&__wrapper
		padding-left 1px
		padding-right 1px
		margin-bottom 2px
		
.btn-wrapper
	margin-top 60px