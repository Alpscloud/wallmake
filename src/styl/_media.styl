// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/
+max-screen(1560px)
	.chapter-card__img
		img
			max-width 350px
+max-screen(1200px)
	.gutter-right
		padding-right 0
		
	// Header
	.header
		font-size 14px
		&-container
			padding-left 20px
			padding-right 20px
			
		&-center
			height 50px
			
		&-bottom
			padding 5px 0
			
	.page-inner .main
		padding-top 121px
		
	
	
	// Catalog
	.project-card__wrapper
		padding-left 15px
		padding-right 15px
		margin-bottom 30px
		
	.projects-cards
		margin-left -15px
		margin-right -15px
		margin-bottom -30px
		
	// Promo
	.promo-slider__controls
		bottom 20px
		right 20px
		
	.content
		font-size 18px
		line-height 24px
		
		blockquote
			margin-left 0
			margin-right 0
			padding-top 40px
			&:before
				top 0
				left 0
				right auto
				margin-right 0
				
		img
			margin-left 0
			margin-right 0
			width 100%
			
	.article
		&-img
			padding-top 56.25%
		
+max-screen(1050px)
	
		
	//page about
	.sect__slogan
		padding 80px 0
		
	// Advantages
	.advantages-slider
		padding-left 20px
		.slick-slide
			width 350px
			
	.portfolio-slider__wrapper,
	.advantages-slider__wrapper
		.slick-dots
			flex-wrap wrap
			margin-bottom -8px
			li
				margin-bottom 8px
			
	// Team
	.team-member
		width 100%
		&:nth-child(4n+4), 
		&:nth-child(4n+5)
			flex-direction row
		&:nth-child(even)
			flex-direction row-reverse
			
	// Blog
	.article-card
		font-size 14px
		line-height 19px
		margin-bottom 60px
		&__title
			font-size 18px
			line-height 22px
	.blog
		.article-card
			&:nth-child(8n+5)
				padding-top 60px
				padding-bottom 60px
			&:nth-child(4n+1)
				flex-wrap wrap
				
				.article-card
					&__thumbnail
						width 100%
						padding-top 70%
						min-height auto
					&__content
						width 100%
						padding-bottom 0
						padding 40px 20px 0 20px
						
					&__title
						font-size 28px
						line-height 32px
					&__preview
						font-size 18px
						line-height 22px
						
				.tag
					font-size 14px
					
				.tags
					margin-bottom 25px
					
				.article-date
					font-size 16px
					margin-top 25px
					
				.link
					font-size 16px
					margin-top 25px
				
	
		
		
+max-screen(992px)
	.page-inner 
		.main
			padding-top 63px
	// Header
	.header
		&:before
			border-bottom 1px solid $basic-white-color
		&-border-block
			position static
			border none
		&.is-menu-opened
			color $dark-text-color
			&:before
				background-color $basic-white-color
				filter none
			.btn-hamburger
				span
					background-color $dark-text-color
			.logo
				img
					filter brightness(0) saturate(100%) invert(25%) sepia(15%) saturate(18%) hue-rotate(336deg) brightness(102%) contrast(86%)
						
			
		&-top,
		&-bottom
			display none
			
		&-center
			height 64px
			.logo
				position relative
				transform none
				top auto
				left auto
				z-index 1
				
			&__content
				display flex
				flex-wrap nowrap
				align-items center
				justify-content flex-start
				
	
	.page-with-light-header
		.header
			border-bottom rgba(255,255,255,.6)		
	.btn-hamburger
		display inline-block
		margin-left -5px
		
	.nav-wrapper
		position fixed
		top 0
		left 0
		width 100%
		height 100vh
		overflow-y auto
		background-color $basic-white-color
		z-index -6
		padding 80px 20px
		color $dark-text-color
		transition all .17s ease-in-out
		opacity 0
		visibility hidden
		pointer-events none
		&.is-opened
			opacity 1
			visibility visible
			pointer-events auto
		
	.nav 
		ul 
			display block
			li
				display block
				margin-right 0
				margin-bottom 8px
				&:last-child
					margin-bottom 0
				&.menu-item-hidden
					display block
					
			a
				font-size 15px
				padding 6px 0
				display block
	
		.sub-menu
			margin-left -20px
			margin-right -20px
			display none
			li
				margin-bottom 0 !important
				a
					display block
					padding 10px 20px 10px 28px
					text-transform none
					font 15px $Med
					color $dark-text-color
					&:before
						display none
				&.current-menu-item
					a
						background-color $color-bg
						
	.nav-mobile
		display block
		padding-top 20px
		margin-top 20px
		border-top 1px solid $border-color
		ul
			li
				margin-bottom 8px
				&:first-child
					a
						padding-top 0
				&:last-child
					margin-bottom 0
			a, button
				display block
				padding 6px 0
				&:before
					background-color $gold-color
	
	.search
		&-wrapper
			display block
			position fixed
			top 0
			left 0
			z-index -5
			width 100%
			background-color $basic-white-color
			overflow-y auto
			height 100vh
			padding 80px 20px
			transition all .17s ease-in-out
			opacity 0
			visibility hidden
			pointer-events none
			&.is-opened
				opacity 1
				visibility visible
				pointer-events auto
				
			.header-container
				padding-left 0
				padding-right 0
				
		&-form
			padding 0
			
		&-results
			background-color $basic-white-color !important
			margin-left -20px
			margin-right -20px
			padding 26px 20px
			&__label
				font-size 12px
				padding-bottom 0
				border-bottom none
				color $text-color !important
				margin-bottom 16px
				
			a
				border none
				font-size 15px
				margin-left -20px
				margin-right -20px
				padding 8px 20px
				&:hover
					background-color $color-bg
					color $dark-text-color !important
				&:before
					display none
			
	.search-form
		flex 1
		position relative
		.btn-clear
			position absolute
		&__wrapper
			align-items center
			display flex
			flex-wrap nowrap
			.link
				margin-top -9px
		&-close
			display inline-block
			white-space nowrap	
			margin-left 8px
			flex none
			
	.search-input
		flex none
		width 100%
		padding 0 40px 11px 30px
		border-bottom 1px solid $border-color
		&:hover,
		&:focus
			border-color $gold-color
		&__ic
			margin-right 0
			position absolute
			top 3px
			left 0
			width 15.5px
			height 15.5px
		&__group
			margin-right 0
			flex none
			width 100%
			position relative
	.btn-clear
		top -2px
		transform none
		
	.btn-search-form-close
		width auto
		height auto
		margin-left 13px
		svg
			display none
		span
			display block
	// Footer
	.footer-bottom
		.row
			flex-wrap wrap
			flex-direction column
		
			align-items center
			
		&-nav
			margin-bottom 16px
			ul
				text-align center
			
		.socials
			margin-bottom 16px
			
	.copyright
		transform none
		top auto
		left auto
		position relative
		width 100%
		text-align center
		

	.footer
		&__row
			flex-wrap wrap
			
		&-center
			margin-bottom 40px
			
		&-nav
			width 100%
			column-count 4
			
	.subscribe-form
		flex none
		max-width 100%
		margin-top 60px
		&__title
			margin-bottom 20px
			
	// Catalog
	.sect__catalog
		padding-top 40px
	.project-card__wrapper
		width 50%
		
	// Work steps
	.work-step__wrapper
		width 50%
		
	// Story
	.story
		flex-wrap wrap
		&-content
			width 100%
			max-width 560px
			
	.simple-slider__wrapper
		margin-top 40px
		flex none
		max-width 100%
			
	.calculator
		&-row
			flex-wrap wrap
					
