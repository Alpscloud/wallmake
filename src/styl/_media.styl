	.presentation-slide
		padding-left 0
		padding-right 0
		.btn
			width 100%
		&__content
			padding 40px 20px
			
			.sect-title
				margin-bottom 30px
				
		&__description
			font-size 16px
			
		&__param
			font-size 14px
			width 33.3333%
			span
				font-size 26px
				
				sup
					font-size 15px
					
