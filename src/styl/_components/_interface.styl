.link
	display inline-block
	position relative
	padding-bottom 2px
	overflow hidden
	color inherit
	font-size inherit
	font-family inherit
	line-height inherit
	&:before
		pseudo()
		position absolute
		left 0
		bottom 0
		height 1px
		width 100%
		transition transform .17s ease-in-out
		transform translateX(-101%)
		background-color currentColor
	&:hover,
	&.is-active
		&:before
			transform translateX(0)
			
	&-arrow
		display inline-block
		position relative
		color $dark-text-color
		font 14px $Med
		&:before
			pseudo()
			position absolute
			top 50%
			width 24px
			height 13px
			background url('../img/icons/svg/arrow.svg') 50% no-repeat / contain
			left 100%
			margin-left 20px
			transform translateY(-50%)
			transition transform .17s ease-in-out
		&:hover
			&:before
				transform translate(5px, -50%)
		
		