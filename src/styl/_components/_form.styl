input[type="search"]
	appearance none
	-webkit-appearance none			

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	appearance none
	-webkit-appearance none
	backface-visibility hidden
	transform translate3d(0,0,0)


.form-groups
	margin-left -10px
	margin-right -10px
	
	.form-group
		padding-left 10px
		padding-right 10px


.form
	&-input
		display block
		width 100%
		padding 0 0 10px 0
		text-align left
		border-bottom 1px solid $border-color
		font 12px $SemiBold
		color $dark-text-color
		&:hover,
		&:focus
			border-color $accent-color
		&::-webkit-input-placeholder
			font 12px $SemiBold
			color $dark-text-color
		&::-moz-placeholder
			font 12px $SemiBold
			color $dark-text-color
		&:-moz-placeholder
			font 12px $SemiBold
			color $dark-text-color
		&:-ms-input-placeholder
			font 12px $SemiBold
			color $dark-text-color
			
		&.is-error
			border-color red
			
		&-rounded
			border 1px solid $basic-white-color
			color $basic-white-color
			padding 17px 24px
			display block
			width 100%
			border-radius 100px
			font 14px $Med
			&:hover,
			&:focus
				border-color $accent-color
			&::-webkit-input-placeholder
				font 14px $Med
				color $basic-white-color
			&::-moz-placeholder
				font 14px $Med
				color $basic-white-color
			&:-moz-placeholder
				font 14px $Med
				color $basic-white-color
			&:-ms-input-placeholder
				font 14px $Med
				color $basic-white-color
			
		&.is-error
			border-color red
			
	&-group
		position relative
		margin-bottom 25px
		&:last-child
			margin-bottom 0
			
		&__label
			display inline-block
			margin-bottom 5px
			
	&-textarea
		min-height 200px
	
	&-notice
		color #F3F3F3
		font-size 14px
		


.form
	&-checkbox
		display inline-block
		position relative
		padding-left 25px
		font 1em $Reg
		line-height 1
		color $text-color
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			vertical-center()
			border-radius 2px
			width 16px
			height 16px
			border 1px solid $text-color
			background-position 50% 50%
			background-repeat no-repeat
			background-size 12px 12px
			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:before
							background-color $text-color
							background-image url('../img/icons/svg/checkbox-ic.svg')
							
.form
	&-radio
		display inline-block
		position relative
		padding-left 25px
		font 1em $Reg
		line-height 1
		color $text-color
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			vertical-center()
			border-radius 50%
			width 16px
			height 16px
			border 1px solid $text-color
		&:after
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 2px
			top 2px
			width 12px
			height 12px
			border-radius 50%
			background-color $text-color
			display none
			

			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:after
							display block


