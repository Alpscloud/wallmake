input[type="search"]
	appearance none
	-webkit-appearance none			

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	appearance none
	-webkit-appearance none
	backface-visibility hidden
	transform translate3d(0,0,0)


.form-groups
	margin-left -10px
	margin-right -10px
	
	.form-group
		padding-left 10px
		padding-right 10px

form.wpcf7-form
	br,
	.wpcf7-response-output
		display none !important
.form
	&-input
		display block
		width 100%
		padding 0 0 10px 0
		text-align left
		border-bottom 1px solid $border-color
		font 12px $SemiBold
		color $dark-text-color
		&:hover,
		&:focus
			border-color $gold-color
		&::-webkit-input-placeholder
			font 12px $SemiBold
			color $dark-text-color
		&::-moz-placeholder
			font 12px $SemiBold
			color $dark-text-color
		&:-moz-placeholder
			font 12px $SemiBold
			color $dark-text-color
		&:-ms-input-placeholder
			font 12px $SemiBold
			color $dark-text-color
			
		&.is-error
			border-color $error-color
			
		&-rounded
			border 1px solid $basic-white-color
			color $basic-white-color
			padding 17px 24px
			display block
			width 100%
			border-radius 100px
			font 14px $Med
			&:hover,
			&:focus
				border-color $gold-color
			&::-webkit-input-placeholder
				font 14px $Med
				color $basic-white-color
			&::-moz-placeholder
				font 14px $Med
				color $basic-white-color
			&:-moz-placeholder
				font 14px $Med
				color $basic-white-color
			&:-ms-input-placeholder
				font 14px $Med
				color $basic-white-color
				
		&-dark
			border-color $dark-text-color
			color $dark-text-color
			background-color $basic-white-color
			&::-webkit-input-placeholder
				color $text-color
			&::-moz-placeholder
				color $text-color
			&:-moz-placeholder
				color $text-color
			&:-ms-input-placeholder
				color $dark-text-color
				
			&:hover,
			&:focus
				border-color $gold-color
				
		&__notice
			font-size 12px
			margin-top 8px
			
		&.is-error
			border-color $error-color
			
	&-group
		position relative
		margin-bottom 25px
		&:last-child
			margin-bottom 0
			
		&__label
			display inline-block
			margin-bottom 5px
			
	&-textarea
		min-height 200px
	
	&-notice
		color #F3F3F3
		font-size 14px
		

.form-select
	position relative
	width 100%
	select
		width 100%
		max-width 100% !important
		background-color transparent
	&:after
		pseudo()
		position absolute
		vertical-center()
		z-index 1
		right 16px
		pointer-events none
		width 24px
		height 24px
		background url('../img/icons/svg/select.svg') 50% no-repeat / contain

.search
	&-wrapper
		position relative
		z-index 1
		display none
	&-form
		display flex
		align-items center
		justify-content space-between
		position relative
		width 50%
		&__wrapper
			display flex
			flex-wrap nowrap
			align-items center
			justify-content space-between
			padding 11px 0
		
	&-input
		display block
		flex 1
		text-transform uppercase
		color inherit
		font 15px $Bold
		padding-right 10px
		&::-webkit-input-placeholder
			font 15px $Bold
			color inherit
		&::-moz-placeholder
			font 15px $Bold
			color inherit
		&:-moz-placeholder
			font 15px $Bold
			color inherit
		&:-ms-input-placeholder
			font 15px $Bold
			color inherit
		&__group
			flex 1
			margin-right 20px
			display flex
			align-items center
			flex-wrap nowrap
			justify-content flex-start
			
		&__ic
			flex none
			width 18px
			height 18px
			margin-right 16px
			transition stroke .17s ease-in-out
			stroke currentColor
			stroke-width 1.5px
			stroke-linecap round 
			stroke-linejoin round
			fill none

.search-results
	padding 32px 0
	transition background-color .17s ease-in-out
	&__label
		font-size 16px
		padding-bottom 10px
		border-bottom 1px solid $basic-white-color
		transition all .17s ease-in-out
		color rgba($basic-white-color, .75)
		
	
	li
		display block
		
	a
		display block
		padding 10px 0
		border-bottom 1px solid currentColor
		font-size 16px
		position relative
		z-index 1
		&:before
			pseudo()
			position absolute
	
			top -1px
			bottom -1px
			width calc(100% + 15px)
			left -15px
			background-color white
			opacity 0
			transition all .17s ease-in-out
			z-index -1
		&:hover
			color $dark-text-color
			&:before
				opacity 1
				
.search-form-close
	margin-left 11px
	display none
	
.form-groups
	&__title
		padding-left 8px
		padding-right 8px
		font 24px $Med
		color $dark-text-color
		margin-bottom 24px
		
	&__row
		margin-bottom 16px
		
.form-label
	padding-left 16px
	@extends .l-spacing
	font 12px $Med
	color $text-color
	margin-bottom 8px
	&-hidden
		visibility hidden
		opacity 0
		

.form-radio__label-l-gutter
	padding-left 16px
	
.form-input-rectangle
	display block
	width 100%
	border 1px solid $border-color
	padding 10.5px 16px
	font 14px $Reg
	@extends .l-spacing
	&::-webkit-input-placeholder
		font 14px $Reg
		color $light-text-color
	&::-moz-placeholder
		font 14px $Reg
		color $light-text-color
	&:-moz-placeholder
		font 14px $Reg
		color $light-text-color
	&:-ms-input-placeholder
		font 14px $Reg
		color $light-text-color
	&:hover,
	&:focus
		border-color $gold-color
		
.form-select
	height 42px
	&__wrapper
		position relative
		&:before
			pseudo()
			position absolute
			vertical-center()
			right 8px
			width 24px
			height 24px
			background url('../img/icons/svg/select.svg') 50% no-repeat / contain
			z-index 1
			pointer-events none
			

.form-radio
	display inline-block
	position relative
	padding-left 28px
	font 14px $Reg
	&:before,
	&:after
		pseudo()
		position absolute
		top 0
		border-radius 50%
		transition all .17s ease-in-out
	&:before
		width 20px
		height 20px
		border 1px solid #514A43
		left 0
		
	&:after
		width 12px
		height 12px
		border 2px solid rgba(#F7F4F2, .9)
		background-color #514A43
		left 4px
		opacity 0
		top 4px
	&__label
		input
			display none
			&:checked + span
				&:before
					background-color #514A43
				&:after
					opacity 1	
					

.form-checkbox
	font 14px $Reg
	padding-left 36px
	display inline-block
	position relative
	cursor pointer
	&:before
		pseudo()
		position absolute
		top 1px
		left 0
		width 20px
		height 20px
		border 1px solid #898074
		border-radius 4px
		background-size 14px 10px
		background-repeat no-repeat
		background-position 50% 50%
	&__label
		input
			display none
			&:checked + span
				&:before
					background-image url('../img/icons/svg/check.svg')
	
			

.form-file
	display block
	input
		display none
	&__types
		font 12px $Reg
		margin-top 8px
		line-height 1
	&__result
		font 14px $Med
		color $text-color
		line-height 1
		
	&__wrapper
		display flex
		flex-wrap nowrap
		justify-content space-between
		align-items center
		padding 20px
		border 1px solid $border-color
		.form-file
			flex none
			width 168px
		
	&__information
		flex 1
		margin-left 25px
		
	
		
	.btn
		width 100%
		padding-left 5px
		padding-right 5px
		background-color #898074
		cursor pointer
		&:hover
			color $basic-white-color
			background-color $accent-color
			

.form-date__wrapper
	position relative
	&:before
		pseudo()
		position absolute
		vertical-center()
		right 8px
		pointer-events none
		z-index 1
		width 20px
		height 20px
		background url('../img/icons/svg/date.svg') 50% no-repeat / contain
		
.form-input-date
	font 14px $Reg
	

.form-group__submit
	margin-top 16px
	
.form-group-toggle
	display none


.is-error
	border-color red