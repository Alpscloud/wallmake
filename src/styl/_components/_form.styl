input[type="search"]
	appearance none
	-webkit-appearance none			

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	appearance none
	-webkit-appearance none
	backface-visibility hidden
	transform translate3d(0,0,0)


.form-groups
	margin-left -10px
	margin-right -10px
	
	.form-group
		padding-left 10px
		padding-right 10px

form.wpcf7-form
	br,
	.wpcf7-response-output
		display none !important
.form
	&-input
		display block
		width 100%
		padding 0 0 10px 0
		text-align left
		border-bottom 1px solid $border-color
		font 12px $SemiBold
		color $dark-text-color
		&:hover,
		&:focus
			border-color $gold-color
		&::-webkit-input-placeholder
			font 12px $SemiBold
			color $dark-text-color
		&::-moz-placeholder
			font 12px $SemiBold
			color $dark-text-color
		&:-moz-placeholder
			font 12px $SemiBold
			color $dark-text-color
		&:-ms-input-placeholder
			font 12px $SemiBold
			color $dark-text-color
			
		&.is-error
			border-color $error-color
			
		&-rounded
			border 1px solid $basic-white-color
			color $basic-white-color
			padding 17px 24px
			display block
			width 100%
			border-radius 100px
			font 14px $Med
			&:hover,
			&:focus
				border-color $gold-color
			&::-webkit-input-placeholder
				font 14px $Med
				color $basic-white-color
			&::-moz-placeholder
				font 14px $Med
				color $basic-white-color
			&:-moz-placeholder
				font 14px $Med
				color $basic-white-color
			&:-ms-input-placeholder
				font 14px $Med
				color $basic-white-color
				
		&-dark
			border-color $dark-text-color
			color $dark-text-color
			background-color $basic-white-color
			&::-webkit-input-placeholder
				color $text-color
			&::-moz-placeholder
				color $text-color
			&:-moz-placeholder
				color $text-color
			&:-ms-input-placeholder
				color $dark-text-color
				
			&:hover,
			&:focus
				border-color $gold-color
				
		&__notice
			font-size 12px
			margin-top 8px
			
		&.is-error
			border-color $error-color
			
	&-group
		position relative
		margin-bottom 25px
		&:last-child
			margin-bottom 0
			
		&__label
			display inline-block
			margin-bottom 5px
			
	&-textarea
		min-height 200px
	
	&-notice
		color #F3F3F3
		font-size 14px
		

.form-select
	position relative
	width 100%
	select
		width 100%
		max-width 100% !important
		background-color transparent
	&:after
		pseudo()
		position absolute
		vertical-center()
		z-index 1
		right 16px
		pointer-events none
		width 24px
		height 24px
		background url('../img/icons/svg/select.svg') 50% no-repeat / contain

.search
	&-wrapper
		position relative
		z-index 1
		display none
	&-form
		display flex
		align-items center
		justify-content space-between
		position relative
		width 50%
		&__wrapper
			display flex
			flex-wrap nowrap
			align-items center
			justify-content space-between
			padding 11px 0
		
	&-input
		display block
		flex 1
		text-transform uppercase
		color inherit
		font 15px $Bold
		padding-right 10px
		&::-webkit-input-placeholder
			font 15px $Bold
			color inherit
		&::-moz-placeholder
			font 15px $Bold
			color inherit
		&:-moz-placeholder
			font 15px $Bold
			color inherit
		&:-ms-input-placeholder
			font 15px $Bold
			color inherit
		&__group
			flex 1
			margin-right 20px
			display flex
			align-items center
			flex-wrap nowrap
			justify-content flex-start
			
		&__ic
			flex none
			width 18px
			height 18px
			margin-right 16px
			transition stroke .17s ease-in-out
			stroke currentColor
			stroke-width 1.5px
			stroke-linecap round 
			stroke-linejoin round
			fill none

.search-results
	padding 32px 0
	transition background-color .17s ease-in-out
	&__label
		font-size 16px
		padding-bottom 10px
		border-bottom 1px solid $basic-white-color
		transition all .17s ease-in-out
		color rgba($basic-white-color, .75)
		
	
	li
		display block
		
	a
		display block
		padding 10px 0
		border-bottom 1px solid currentColor
		font-size 16px
		position relative
		z-index 1
		&:before
			pseudo()
			position absolute
	
			top -1px
			bottom -1px
			width calc(100% + 15px)
			left -15px
			background-color white
			opacity 0
			transition all .17s ease-in-out
			z-index -1
		&:hover
			color $dark-text-color
			&:before
				opacity 1
				
.search-form-close
	margin-left 11px
	display none
