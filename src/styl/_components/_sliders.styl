.slick-track
	display flex
	flex-wrap nowrap
	.slick-slide
		float none !important
	.promo-slide,
	.story-slide
		display block !important
		
.slick-dotted.slick-slider
	margin-bottom 0
		
.slider-pagination
	margin-top 25px
	.slick-dots
		bottom auto
		position relative
		height 8px
		display flex !important
		justify-content flex-start
		li
			width 8px
			height 8px
			margin 0
			margin-right 12px
			&:last-child
				margin-right 0
			button
				width 100%
				height 100%
				padding 0
				border-radius 50%
				background-color #c4c4c4
				&:before,
				&:after
					display none
					
			&.slick-active
				button
					background-color $dark-text-color
		
	&.rectangles-view
		li
			width 56px
			height 4px
			button
				border-radius 0

// Promo

.promo-slide
	min-height 100vh
	position relative
	overflow hidden
	flex-col-center()
	padding 100px 0
	background-size 0
	.container
		position relative
		z-index 2
	&:after
		pseudo()
		bg(50%, 50%)
		position absolute
		fullSize()
		background-image inherit
		transition transform 7s ease-in-out
		transform scale(1,1)
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba($overlay-bg, .5)
		z-index 1
		
.promo-slider
	
	&-wrapper
		position relative
		
	.slick-current
		.promo-slide:after
			transform scale(1.15, 1.15)
			
	&__controls
		display flex
		flex-wrap nowrap
		position absolute
		z-index 3
		bottom 60px
		right 60px
	&__btn
		width 48px
		height 48px
		flex-col-center()
		border 1px solid $basic-white-color
		margin-right 30px
		&:last-child
			margin-right 0
		svg
			svg()
			width 14px
			height 24px
			fill none
			stroke $basic-white-color
			stroke-width 2px
			stroke-linecap round
			stroke-linejoin round
		&:hover
			background-color $basic-white-color
			svg
				stroke $basic-black-color
				

// Story 
.simple-slider
	&__wrapper
		width 100%
		flex 1
		max-width 510px
		
.simple-slide
	padding-top 129.5%
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba($overlay-bg, .3)
		z-index 1
	
// portfolio
.portfolio
	&-slider
		&__wrapper
			margin-top 40px
			width 1480px
			
		.slick-slide
			margin-right 20px
			
	&-slide
		padding-top 129.5%
		&:before
			pseudo()
			position absolute
			fullSize()
			background-color rgba($overlay-bg, .3)
			z-index 1
			
	&-label
		display inline-block
		position absolute
		top 30px
		left 20px
		z-index 2
		text-align center
		color rgba($basic-white-color, .9)
		padding 4px 8px
		background-color rgba(255, 255, 255, 0.3)
		border-radius 2px
		text-transform uppercase
	
	&-title
		position absolute
		bottom 30px
		left 20px
		text-transform uppercase
		font 24px $Med
		line-height 33px
		color $basic-white-color
		z-index 2